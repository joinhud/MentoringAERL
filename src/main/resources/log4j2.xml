<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug">
    <Properties>
        <Property name="filepath">logs</Property>
        <Property name="errorFilePath">errors</Property>
        <Property name="pattern">%d{yyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36}: %msg%n</Property>
    </Properties>

    <Appenders>
        <RollingFile name="File" fileName="${filepath}/app.log"
                      filePattern="${filepath}/%d{yyyy-MM-dd}-app.log"
                      append="true" >
            <PatternLayout pattern="${pattern}"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="5 KB"/>
            </Policies>
        </RollingFile>
        <RollingFile name="ErrorFile" fileName="${errorFilePath}/error.log"
                     filePattern="${errorFilePath}/%d{yyyy-MM-dd}-%i-app.log"
                     append="true">
            <PatternLayout pattern="${pattern}"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="523 KB"/>
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="all">
            <AppenderRef ref="File" level="debug"/>
            <AppenderRef ref="ErrorFile" level="error"/>
        </Root>
    </Loggers>
</Configuration>