<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <mapping map-null="false">
        <class-a>com.epam.aerl.mentoring.entity.StudentDTO</class-a>
        <class-b>com.epam.aerl.mentoring.entity.StudentDomainModel</class-b>
        <field>
            <a>universityDTO</a>
            <b>university</b>
        </field>
        <field custom-converter="com.epam.aerl.mentoring.util.MarksDozerConverter">
            <a>marks</a>
            <b>marks</b>
            <a-hint>java.util.HashSet</a-hint>
            <b-hint>java.util.HashMap</b-hint>
        </field>
        <field copy-by-reference="true">
            <a>creationInBD</a>
            <b>creationInDbDate</b>
        </field>
        <field copy-by-reference="true">
            <a>lastUpdateInBD</a>
            <b>lastUpdateInDbDate</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.epam.aerl.mentoring.entity.UniversityDTO</class-a>
        <class-b>com.epam.aerl.mentoring.entity.UniversityDomainModel</class-b>
        <field custom-converter="com.epam.aerl.mentoring.util.UniversityStatusDozerConverter">
            <a>universityStatusDTO</a>
            <b>status</b>
        </field>
        <field copy-by-reference="true">
            <a>foundationDate</a>
            <b>foundationDate</b>
        </field>
        <field copy-by-reference="true">
            <a>creationInDB</a>
            <b>creationInDbDate</b>
        </field>
        <field copy-by-reference="true">
            <a>lastUpdateInDB</a>
            <b>lastUpdateInDbDate</b>
        </field>
        <field>
            <a>studentDTOs</a>
            <b>students</b>
        </field>
    </mapping>

    <mapping map-null="false">
        <class-a>com.epam.aerl.mentoring.entity.StudentDomainModel</class-a>
        <class-b>com.epam.aerl.mentoring.entity.Student</class-b>
        <field>
            <a>marks</a>
            <b>marks</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.epam.aerl.mentoring.entity.UniversityDomainModel</class-a>
        <class-b>com.epam.aerl.mentoring.entity.University</class-b>
        <field copy-by-reference="true">
            <a>status</a>
            <b>status</b>
        </field>
        <field copy-by-reference="true">
            <a>foundationDate</a>
            <b>foundationDate</b>
        </field>
    </mapping>
</mappings>